<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPostController</servlet-name>
        <servlet-class>Controller.ListPostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDetailController</servlet-name>
        <servlet-class>Controller.PostDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>Controller.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCommentController</servlet-name>
        <servlet-class>Controller.PostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeAvatarController</servlet-name>
        <servlet-class>Controller.ChangeAvatarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewPostController</servlet-name>
        <servlet-class>Controller.CreateNewPostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdentifyAccountController</servlet-name>
        <servlet-class>Controller.IdentifyAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUserToMessage</servlet-name>
        <servlet-class>Controller.ListUserToMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPostController</servlet-name>
        <url-pattern>/list_post_controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDetailController</servlet-name>
        <url-pattern>/post_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/user_profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCommentController</servlet-name>
        <url-pattern>/post_comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeAvatarController</servlet-name>
        <url-pattern>/change_avatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewPostController</servlet-name>
        <url-pattern>/create_new_post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdentifyAccountController</servlet-name>
        <url-pattern>/identify_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserToMessage</servlet-name>
        <url-pattern>/list_user_message</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>20</session-timeout>
        <!-- Đơn vị: phút -->
    </session-config>
</web-app>
